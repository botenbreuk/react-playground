{
  "name": "react-playground",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "4.6.0",
    "immutability-helper": "^3.1.1",
    "lodash": "4.17.20",
    "react": "17.0.1",
    "react-dnd": "11.1.3",
    "react-dnd-html5-backend": "11.1.3",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.2",
    "reactstrap": "8.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/user-event": "12.6.3",
    "@types/jest": "26.0.20",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.25",
    "@types/react": "17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "5.1.7",
    "@types/reactstrap": "8.7.2",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "eslint": "7.19.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "typescript": "4.1.3"
  },
  "scripts": {
    "build": "npm run create-env && react-scripts build",
    "coverage": "npm run test -- --coverage --watchAll=false",
    "create": "npm run create-env",
    "create-env": "echo \"SKIP_PREFLIGHT_CHECK=true\nREACT_APP_VERSION=${npm_package_version}\nBUILD_TIME=\"$(date +%Y-%m-%dT%H:%M:%S%z)\"\n\" > .env",
    "lint": "eslint src --ext js,jsx,ts,tsx --max-warnings=0",
    "serve-build": "npm run build && cd server && npm install && node ./index.js",
    "start": "npm run create && react-scripts start",
    "test": "react-scripts test",
    "test-all": "npm run create-env && npm run lint && npm run ts && npm run test -- --watchAll=true",
    "ts": "tsc --version && tsc"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,jsx,json,scss,tsx,ts}": [
      "prettier --single-quote --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/core/index.ts",
      "!src/index.tsx",
      "!src/i18n.ts",
      "!src/error.ts",
      "!src/registerServiceWorker.ts"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "files": [
    "dist",
    "version.txt"
  ]
}
