{
  "name": "react-playground",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "4.4.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-scripts": "3.3.0",
    "reactstrap": "8.2.0"
  },
  "devDependencies": {
    "@types/reactstrap": "8.2.0",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@testing-library/user-event": "8.0.3",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.6",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "husky": "4.0.6",
    "prettier": "1.19.1",
    "typescript": "3.7.4"
  },
  "scripts": {
    "build": "react-scripts build",
    "coverage": "npm run test -- --coverage --watchAll=false",
    "create-env": "echo \"SKIP_PREFLIGHT_CHECK=true\nREACT_APP_VERSION=${npm_package_version}\nBUILD_TIME=\"$(date +%Y-%m-%dT%H:%M:%S%z)\"\n\" > .env",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext js,jsx,ts,tsx --max-warnings=0",
    "serve-build": "npm run build && cd server && npm install && node ./index.js",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test-all": "npm run create-env && npm run lint && npm run ts && npm run coverage",
    "ts": "tsc --version && tsc"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,jsx,json,scss,tsx,ts}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
